<!-- 1 Source Source, 1 Sink Sink -->

<simulation>
  <control>
    <duration>10</duration>
    <startmonth>1</startmonth>
    <startyear>2000</startyear>
    <decay>lazy</decay>
  </control>

  <archetypes>
    <spec><lib>cycamore</lib><name>Sink</name></spec>
    <spec><lib>cycamore</lib><name>Source</name></spec>
    <spec><lib>recycle</lib><name>Corrm</name></spec>
    <spec><lib>agents</lib><name>NullRegion</name></spec>
    <spec><lib>agents</lib><name>NullInst</name></spec>
  </archetypes>

  <facility>
    <name>Source</name>
    <config>
      <Source>
        <outcommod>natl_u</outcommod>
        <outrecipe>natl_u</outrecipe>
        <throughput>9999999</throughput>
      </Source>
    </config>
  </facility>

  <facility>
    <name>fill_source</name>
    <config>
      <Source>
        <outcommod>fill</outcommod>
        <outrecipe>fill</outrecipe>
        <throughput>100000</throughput>
      </Source>
    </config>
  </facility>

  <facility>
    <name>Corrm</name>
    <config>
      <Corrm>
        <in_commods>
            <val>natl_u</val>
        </in_commods>
        <fill_commods>
            <val>fill</val>
        </fill_commods>
        <rep_frac>0.1</rep_frac>
        <fill_size>10000</fill_size>
        <core_size>100</core_size>
        <pa_tank_stream>
          <comp>Pa</comp>
          <eff>0.99</eff>
        </pa_tank_stream>
        <waste_stream>
          <comp>Xe</comp>
          <eff>0.999</eff>
        </waste_stream>
        <out_commods>
            <val>trash</val>
        </out_commods>
      </Corrm>
    </config>
  </facility>


  <facility>
    <name>Sink</name>
    <config>
      <Sink>
        <in_commods>
          <val>trash</val>
        </in_commods>
        <capacity>1000000</capacity>
      </Sink>
    </config>
  </facility>

  <region>
    <name>SingleRegion</name>
    <config><NullRegion/></config>
    <institution>
      <name>SingleInstitution</name>
      <initialfacilitylist>
        <entry>
          <prototype>Source</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>fill_source</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Corrm</prototype>
          <number>1</number>
        </entry>
        <entry>
          <prototype>Sink</prototype>
          <number>1</number>
        </entry>
      </initialfacilitylist>
      <config><NullInst/></config>
    </institution>
  </region>

  <recipe>
    <name>natl_u</name>
    <basis>mass</basis>
    <nuclide>
      <id>922350000</id>
      <comp>0.7</comp>
    </nuclide>
    <nuclide>
      <id>922380000</id>
      <comp>99.3</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>fuel_recipe</name>
    <basis>mass</basis>
    <nuclide>
      <id>922350000</id>
      <comp>4.5</comp>
    </nuclide>
    <nuclide>
      <id>922380000</id>
      <comp>95.5</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>used_fuel_recipe</name>
    <basis>atom</basis>
    <nuclide>
      <id>10010000</id>
      <comp>100</comp>
    </nuclide>
  </recipe>

  <recipe>
    <name>n</name>
    <basis>atom</basis>
    <nuclide>
      <id>902320000</id>
      <comp>100</comp>
    </nuclide>
  </recipe>


  <recipe>
    <name>fill</name>
    <basis>atom</basis>
    <nuclide>
      <id>902320000</id>
      <comp>100</comp>
    </nuclide>
  </recipe>


</simulation>
